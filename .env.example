# Azure Credentials
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret

# Resource Groups
RESOURCE_GROUP_DEV=rg-devops-platform-dev
RESOURCE_GROUP_STAGING=rg-devops-platform-staging
RESOURCE_GROUP_PROD=rg-devops-platform-prod

# Container Registry
CONTAINER_REGISTRY_NAME=your-acr-name
CONTAINER_REGISTRY_SKU=Premium  # Options: Basic, Standard, Premium

# Storage Account for Terraform State
STORAGE_ACCOUNT_NAME=your-tfstate-storage
STORAGE_ACCOUNT_KEY=your-storage-key
TERRAFORM_STATE_CONTAINER=tfstate

# GitHub Actions
GITHUB_TOKEN=your-github-token

# Monitoring
APPLICATION_INSIGHTS_KEY=your-appinsights-key
LOG_ANALYTICS_WORKSPACE_ID=your-workspace-id

# VM Provisioning
VM_ADMIN_USERNAME=adminuser
VM_SSH_PUBLIC_KEY=your-ssh-public-key

# Application Settings
ENVIRONMENT=development  # Options: development, staging, production
DEBUG=false

# Resource Tags
AZURE_RESOURCE_TAG_TEAM=your-team-name 